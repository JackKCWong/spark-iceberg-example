    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Current File",
            "request": "launch",
            "mainClass": "${file}"
        },
        {
            "type": "java",
            "name": "App",
            "request": "launch",
            "mainClass": "com.mycompany.App",
            "projectName": "spark-iceberg",
            "vmArgs": [
                "--add-opens=java.base/sun.nio.ch=ALL-UNNAMED",
                "--add-opens=java.base/java.nio=ALL-UNNAMED"
            ]
        },
        {
            "type": "java",
            "name": "Launcher",
            "request": "launch",
            "mainClass": "com.mycompany.Launcher",
            "projectName": "spark-iceberg"
        }
    ]
